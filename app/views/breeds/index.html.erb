<div class="d-flex align-items-center justify-content-center" style="height: 100vh;">
  <div class="card mt-lg-3" style="width: 50rem;">
    <div class="card-body">
      <div class="row" data-controller="breed">
        <p class="h1">Jokepit Assessment</p>

        <div class="col-6 mt-3">
          <div class="mb-3">
            <%= form_tag breeds_path,
                         class: 'row g-3 needs-validation',
                         data: {
                           'breed-target': 'form'
                         },
                         novalidate: true do %>
              <div class="col-12 position-relative">
                <%= label_tag :breed, 'Breed', class: 'form-label' %>

                <%= text_field_tag 'breed', nil,
                                   class: 'form-control',
                                   data: { 'breed-target': 'breedName' },
                                   required: true %>

                <div class="invalid-feedback">
                  Please provide a breed.
                </div>
              </div>

              <div class="col-12">
                <%= button_tag 'Submit', type: 'button',
                               class: 'btn btn-primary',
                               data: { action: 'click->breed#submit' } %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-6">
          <div class="text-center col-12">
            <img src="no-image.png" class="rounded img-thumbnail" id="thumbnail" style="max-width: 100%; height: 300px;">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
